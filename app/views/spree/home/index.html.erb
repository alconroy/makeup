<div class="products-content">
	<div class="sale clearfix">
	    <div class="container">
			<div class="row">
				<div class="title">
	            	<hr class="sale">
	        	</div>
				<% @products.where(sale: true).each do |e| %>
				  <div class="thumbnail col-sm-6 col-md-3">
				      <%= link_to image_tag('http://ts.liveofficedata.co.uk/' + e.image_url), e %>
				      <div class="caption">
				      	<span><%= link_to e.ts_code, e %></span>
				        <h4><%= link_to truncate(e.name, length: 80), e %></h4>				        
				        <span class="button">
				        	<button class="btn btn-primary">
				        		<span>€</span>
				        		<%= link_to e.price, e %>
				        	</button>
				        </span>
				      </div>
				  </div>
				<% end %>
			</div>
	    </div>
	</div>

	<div class="featured clearfix">
	    <div class="container">
			<div class="row">
				<div class="title">
	            	<hr class="featured">
	        	</div>
				<% @products.where(featured: true).each do |e| %>
				  <div class="thumbnail col-sm-6 col-md-3">
				      <%= link_to image_tag('http://ts.liveofficedata.co.uk/' + e.image_url), e %>
				      <div class="caption">
				      	<span><%= link_to e.ts_code, e %></span>
				        <h4><%= link_to truncate(e.name, length: 80), e %></h4>
				        <span class="button">
				        	<button class="btn btn-primary">
					        	<span>€</span>
					        	<%= link_to e.price, e %>
				        	</button>
				        </span>
				      </div>
				  </div>
				<% end %>
			</div>
	    </div>
	</div>

	<div class="latest clearfix">
	    <div class="container">
			<div class="row">
				<div class="title">
	            	<hr class="latest">
	        	</div>
				<% @products.where(latest: true).each do |e| %>
				  <div class="thumbnail col-sm-6 col-md-3">
				      <%= link_to image_tag('http://ts.liveofficedata.co.uk/' + e.image_url), e %>
				      <div class="caption">
				      	<span><%= link_to e.ts_code, e %></span>
				        <h4><%= link_to truncate(e.name, length: 80), e %></h4>
				        <span class="button">
				        	<button class="btn btn-primary">
					        	<span>€</span>
					        	<%= link_to e.price, e %>
				        	</button>
				        </span>
				      </div>
				  </div>
				<% end %>
			</div>
	    </div>
	</div>
</div>