<% content_for :sidebar do %>
  <div data-hook="homepage_sidebar_navigation">
    <%= render :partial => 'spree/shared/taxonomies' %>
  </div>
<% end %>

<div class="banner">
    <ul class="bxslider">
    	<li>
    		<a href="/">
	        	<%= image_tag("slider1.jpg", alt: "Slider1") %>
	            <h2 class="title four-lines">Test 1/</h2>
	    	</a>
        </li>
        <li>
        	<a href="/">
        		<%= image_tag("slider2.jpg", alt: "Slider2") %>
	            <h2 class="title four-lines">
	                <a href="#">Test 2</a>
	            </h2>
	        </a>
        </li>
        <li>
        	<a href="/">
	        	<%= image_tag("slider3.png", alt: "Slider3") %>
	            <h2 class="title two-lines">
	                <a href="#">Test 3</a>
	            </h2>
	        </a>
        </li>
    </ul>
</div>

<div id="triple-top">
	<div class="row">
		<div class="col-md-6 categories-left">
			<a style="position:relative;" href="/t/printer-slash-fax-slash-copier-supplies/inkjet-cartridges">
				<%= image_tag("cartridges-1.jpg") %>
			</a>
			<a style="position:relative;" href="/t/printer-slash-fax-slash-copier-supplies/inkjet-cartridges">
				<%= image_tag("cartridges-2.jpg") %>
			</a>
		</div>
		<div class="col-md-6 categories-right">
			<a style="position:relative;" href="/t/printer-slash-fax-slash-copier-supplies/inkjet-cartridges">
				<%= image_tag("cartridges-3.jpg") %>
			</a>
		</div>
	</div>
</div>

<div class="sale clearfix">
    <div class="container">
		<div class="row">
			<div class="title">
            	<hr class="sale">
        	</div>
			<% @products.where(sale: true).each do |e| %>
			  <div class="col-sm-6 col-md-3">
			    <div class="thumbnail">
			      <%= link_to image_tag('http://ts.liveofficedata.co.uk/' + e.image_url), e %>
			      <div class="caption">
			        <h4><%= link_to truncate(e.name, length: 80), e %></h4>
			        <p><%= link_to e.ts_code, e %></p>
			        <p><button class="btn btn-primary">€<%= link_to e.price, e %></button></p>
			      </div>
			    </div>
			  </div>
			<% end %>
		</div>
    </div>
</div>

<div class="featured clearfix">
    <div class="container">
		<div class="row">
			<div class="title">
            	<hr class="featured">
