<div class="products-content">
	<h2>Products</h2>
	<div id="tabs">
		<ul>
			<li class="title">
	        	<hr class="sale">
	    	</li>
	    	<li class="title">
            	<hr class="featured">
        	</li>
        	<li class="title">
            	<hr class="latest">
        	</li>
		</ul>
		<div id="tabs-1" class="sale clearfix">
		    <div class="container">
				<div class="row">					
					<% @products.where(sale: true).each do |e| %>
					  <div class="thumbnail col-sm-6 col-md-3">
					      <%= link_to image_tag('http://ts.liveofficedata.co.uk/' + e.image_url), e %>
					      <div class="caption">
					      	<span><%= link_to e.ts_code, e %></span>
					        <h4><%= link_to truncate(e.name, length: 80), e %></h4>				        
					        <span class="button">
					        	<button class="btn btn-primary">
					        		<span>€</span>
					        		<%= link_to e.price, e %>
					        	</button>
					        </span>
					      </div>
					  </div>
					<% end %>
				</div>
		    </div>
		</div>

		<div id="tabs-2" class="featured clearfix">
		    <div class="container">
				<div class="row">
					<% @products.where(featured: true).each do |e| %>
					  <div class="thumbnail col-sm-6 col-md-3">
					      <%= link_to image_tag('http://ts.liveofficedata.co.uk/' + e.image_url), e %>
					      <div class="caption">
					      	<span><%= link_to e.ts_code, e %></span>
					        <h4><%= link_to truncate(e.name, length: 80), e %></h4>
					        <span class="button">
					        	<button class="btn btn-primary">
						        	<span>€</span>
						        	<%= link_to e.price, e %>
					        	</button>
					        </span>
					      </div>
					  </div>
					<% end %>
				</div>
		    </div>
		</div>

		<div id="tabs-3" class="latest clearfix">
		    <div class="container">
				<div class="row">					
					<% @products.where(latest: true).each do |e| %>
					  <div class="thumbnail col-sm-6 col-md-3">
					      <%= link_to image_tag('http://ts.liveofficedata.co.uk/' + e.image_url), e %>
					      <div class="caption">
					      	<span><%= link_to e.ts_code, e %></span>
					        <h4><%= link_to truncate(e.name, length: 80), e %></h4>
					        <span class="button">
					        	<button class="btn btn-primary">
						        	<span>€</span>
						        	<%= link_to e.price, e %>
					        	</button>
					        </span>
					      </div>
					  </div>
					<% end %>
				</div>
		    </div>
		</div>
	</div>
</div>